{
    "name": "auto-fold-unfold",
    "displayName": "Auto Fold & Unfold",
    "description": "Auto fold and unfold to visually manage the code size.",
    "publisher": "levipires",
    "license": "MIT",
    "version": "0.6.1",
    "preview": true,
    "keywords": [
        "auto", "fold", "unfold", "code", "prettier", "extension", "visualization"
    ],
    "engines": {
        "vscode": "^1.48.0"
    },
    "categories": [
        "Visualization"
    ],
    "activationEvents": [
        "*"
    ],
    "contributes": {
        "configuration": {
            "title": "Auto Fold & Unfold",
            "properties": {
                "auto-fold-unfold.onEdit": {
                    "scope": "resource",
                    "type": "boolean",
                    "default": true,
                    "description": "Folds or unfolds while you are coding"
                },
                "auto-fold-unfold.behaviorOnEdit": {
                    "scope": "resource",
                    "type": "string",
                    "default": "parent",
                    "enum": ["family", "parent"],
                    "enumDescriptions": [
                        "the block where the cursor is and it's children will be unfolded",
                        "only the block where the cursor is will be unfolded"
                    ],
                    "description": "Defines fold and unfold behavior while editing",
                    "anyOf": ["family", "parent"]
                },
                "auto-fold-unfold.modeOnEdit": {
                    "scope": "resource",
                    "type": "string",
                    "default": "fast",
                    "enum": ["fast", "best"],
                    "enumDescriptions": [
                        "has a limit of 7 levels",
                        "doesn't have limits but is way slower"
                    ],
                    "description": "Defines the mode of fold and unfold while editing",
                    "anyOf": ["fast", "best"]
                },
                "auto-fold-unfold.onDidChangeActiveTextEditor": {
                    "scope": "resource",
                    "type": "boolean",
                    "default": false,
                    "description": "Folds all whenever a file is opened or the active editor changes. This option might reduce productivity."
                },
                "auto-fold-unfold.onSaved": {
                    "scope": "resource",
                    "type": "boolean",
                    "default": false,
                    "description": "Folds all when the document is saved. For the sake of data integrity the editor might save without firing this event."
                }
            }
        },
        "commands": [{
            "title": "Fold code and close the editor",
            "command": "auto-fold-unfold.foldAndClose"
        }],
        "keybindings": [{
            "command": "auto-fold-unfold.foldAndClose",
            "key": "ctrl+f ctrl+w"
        }]
    },
    "main": "./src/extension.js",
    "icon": "images/afu.png",
    "galleryBanner": {
        "theme": "dark",
        "color": "#19355e"
    },
    "repository": {
        "url": "https://github.com/levi-pires/auto-fold-unfold",
        "type": "git"
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "yarn run lint",
        "test": "jest"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/jest": "^26.0.9",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "@types/vscode": "^1.48.0",
        "eslint": "^6.8.0",
        "glob": "^7.1.6",
        "jest": "^26.3.0",
        "jshint": "^2.11.2",
        "mocha": "^7.1.2",
        "typescript": "^3.8.3",
        "vsce": "^1.78.0",
        "vscode-test": "^1.3.0"
    },
    "dependencies": {}
}