{
    "name": "auto-fold-unfold",
    "displayName": "Auto Fold & Unfold",
    "description": "Auto fold and unfold to visually manage the code size.",
    "publisher": "levipires",
    "license": "MIT",
    "version": "0.4.1",
    "preview": true,
    "engines": {
        "vscode": "^1.48.0"
    },
    "categories": [
        "Visualization"
    ],
    "activationEvents": [
        "*"
    ],
    "contributes": {
        "configuration": {
            "title": "AFU",
            "properties": {
                "auto-fold-unfold.onEdit": {
                    "scope": "resource",
                    "type": "boolean",
                    "default": true,
                    "description": "Folds or unfolds while you are coding"
                },
                "auto-fold-unfold.onDidChangeActiveTextEditor": {
                    "scope": "resource",
                    "type": "boolean",
                    "default": false,
                    "description": "Folds all whenever a file is opened or the active editor changes. This option might reduce productivity."
                },
                "auto-fold-unfold.onSaved": {
                    "scope": "resource",
                    "type": "boolean",
                    "default": false,
                    "description": "Folds all when the document is saved. For the sake of data integrity the editor might save without firing this event."
                },
                "auto-fold-unfold.debug": {
                    "scope": "resource",
                    "type": "boolean",
                    "default": false,
                    "description": "This setting is used during development testing of this extension. Change it will not affect your life at all"
                }
            }
        }
    },
    "main": "./src/extension.js",
    "icon": "images/afu.png",
    "galleryBanner": {
        "theme": "dark",
        "color": "#19355e"
    },
    "repository": {
        "url": "https://github.com/levi-pires/auto-fold-unfold",
        "type": "git"
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "yarn run lint",
        "test": "jest"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/jest": "^26.0.9",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "@types/vscode": "^1.48.0",
        "eslint": "^6.8.0",
        "glob": "^7.1.6",
        "jest": "^26.3.0",
        "jshint": "^2.11.2",
        "mocha": "^7.1.2",
        "typescript": "^3.8.3",
        "vsce": "^1.78.0",
        "vscode-test": "^1.3.0"
    },
    "dependencies": {},
    "keywords": [
        "auto", "fold", "code", "prettier", "extension", "visualization"
    ]
}